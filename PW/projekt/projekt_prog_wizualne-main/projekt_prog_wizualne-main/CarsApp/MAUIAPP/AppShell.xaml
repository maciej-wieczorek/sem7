<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUIAPP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUIAPP"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent
        Title="Medicine Catalogue"
        ContentTemplate="{DataTemplate local:MedicinePage}"
        Route="MedicinePage" />

        <ShellContent
        Title="Producer Catalogue"
        ContentTemplate="{DataTemplate local:ProducerPage}"
        Route="ProducerPage" />

    </FlyoutItem>

    <ShellContent
        Title="Medicine Editing"
        ContentTemplate="{DataTemplate local:EditMedicinePage}"
        Route="EditMedicinePage" />

    <ShellContent
        Title="Medicine Adding"
        ContentTemplate="{DataTemplate local:AddNewMedicinePage}"
        Route="AddNewMedicinePage" />

    <ShellContent
        Title="Producer Editing"
        ContentTemplate="{DataTemplate local:EditProducerPage}"
        Route="EditProducerPage" />

    <ShellContent
        Title="Producer Adding"
        ContentTemplate="{DataTemplate local:AddNewProducerPage}"
        Route="AddNewProducerPage" />

</Shell>

