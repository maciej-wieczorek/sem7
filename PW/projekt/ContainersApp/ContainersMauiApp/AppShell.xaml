<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ContainersMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ContainersMauiApp"
    Shell.FlyoutBehavior="Disabled"
    Title="ContainersMauiApp">

	<FlyoutItem>
		<ShellContent
        Title="Containers list"
        ContentTemplate="{DataTemplate local:ContainersPage}"
        Route="ContainersPage" />

		<ShellContent
        Title="Producers list"
        ContentTemplate="{DataTemplate local:ProducersPage}"
        Route="ProducersPage" />

		<ShellContent
        Title="Add Container"
        ContentTemplate="{DataTemplate local:ContainerAddPage}"
        Route="ContaienrAddPage" />
	</FlyoutItem>
</Shell>
